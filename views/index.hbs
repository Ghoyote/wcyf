<section id="contact">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2 text-center">
				<h2 class="section-heading">Let's Get In Touch!</h2>
				<hr class="primary">
				<p>Join us to worship Our God and our King Lord Jesus together with our Spirit-filled choir.
					worship with us and become a partner today!</p>
			</div>
			<div class="col-lg-4 col-lg-offset-2 text-center">
				<i class="fa fa-phone fa-3x sr-contact"></i>
				<p>(+233)505870899</p>
			</div>
			<div class="col-lg-4 text-center">
				<a href="#contact-form" data-toggle="collapse" class="toggle-form"><i
						class="fa fa-envelope-o fa-3x sr-contact"></i><br>
					<small>Contact Us</small>
				</a>
				<form class="row collapse in form-group form-group-sm form-group-lg form-contact" method="post" action="sendmail"
				      id="contact-form">
					<label for="name"><span>Name: </span> <input type="text" class="form-control" name="name" id="name" required></label>
					<label for="name">Email Address: <input type="email" class="form-control" name="email" id="email"></label>
					<label for="category select">Category
						<select class="form-group form-control text-left" name="category" id="category" required>
							<option class="text-muted">Select A Category</option>
							<option value="testimony">Testimony</option>
							<option value="">Saab</option>
							<option value="mercedes">Mercedes</option>
							<option value="audi">Audi</option>
						</select>
					</label>

					<label for="message">Message: <textarea class="form-control" name="message" required rows="15"
					                                        id="message"></textarea></label>
					<p class="submit">
						<input class="btn btn-default btn-xl sr-button pull-right" type="submit" value="Submit">
					</p>
				</form>
			</div>

		</div>
	</div>
</section>